
%h2 All Updates

= paginate @updates

%table.table
  %thead
    %tr
      %th{:class => @title_header, :id => 'title_header'}= link_to 'Updates', updates_path(:sort => 'title')
      %th{:class => @date_header, :id => 'created_date_header'}= link_to 'Last Created', updates_path(:sort => 'created_date')
  %tbody
    - @updates.each do |update|
      %tr
        %td.table-update-title
          = link_to "#{update.title}", update_path(update), :class => 'h3 text-success'
        %td= update.created_at
%br
- if admin_signed_in?
  = button_to "Create an update", new_update_path , :method => :get , :class => 'btn btn-success'


