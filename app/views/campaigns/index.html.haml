#campaigns.row
  .span3
    ="Farmer"
  .span1
    ="# Friends"
  .span2
    ="Progress" 
   

- @campaign.each do |campaign|  
  -if not campaign.project==nil && campaign!=nil
    .row
      .span3
        =link_to  "  #{campaign.project.farmer}", manager_campaign_path(campaign)
      .span1
        = campaign.campaign_friend.find(:all).count
      .span2
        = "$" + campaign.project.current.to_s() + " / $" + campaign.project.target.to_s() 
      .span1
        = link_to 'Edit', edit_campaign_path(:id=>campaign), :class => 'btn btn-warning'
      .span1
        = link_to "Delete", campaign_path(:id=>campaign), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger'
