%h1 Send your Donation Requests!

%h3 Current Status
= link_to @campaign.project.farmer, project_path(@campaign.project)
= ": #{@campaign.project.current} of #{@campaign.project.target} funded"
%br
= "Campaign donated #{@campaign.readable_donated} so far"

%h3 Message Template
%b Subject:
%br
= @campaign.email_subject
%br
%b Body:
%br
= @campaign.template

%br
= link_to  "Change Template", template_campaign_path()

%h3 Video Link
= @campaign.video.link
%br
= link_to  "Change Link", video_campaign_path()

%h3 Send Emails
= link_to  "Manage Friends", friends_campaign_path()
.row
  .span2
    %b Name
  .span2
    %b Email address
  .span2
    %b Sent Counter
  .span2
    %b Opened?
  .span2
    %b Send Now
- @campaign.campaign_friend.each do |friend|
  = render 'send_friend', :friend => friend