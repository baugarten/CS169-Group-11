.control-group
  %label.control-label{:style => 'height: 300px'}
    = radio_button_tag 'video', 'recorded', true, :class => "video-select", :id => "recorded"
  .controls
    = render 'youtube/upload', :height => 300, :width => 500, :editable => false, :form => true, :extras => 1
.control-group
  %label.control-label
    = radio_button_tag 'video', 'link', false, :class => "video-select", :id => "link"
  .controls
    = label :campaign, :video_link, 'Video Link', :class => "pull-left unstyled-label"
    = text_field :campaign, :video_link
