.hero-unit.project_sidebar
  = render 'farmer'

  %h2 Donate:
  = form_tag donate_project_path(@project.id), :method => :get, :id => 'donation-form' do

    .row
      .span1
        = radio_button_tag "amount", "5" 
      .span2
        = label :amount, 5, "$5"
    
    .row
      .span1
        = radio_button_tag "amount", "10" 
      .span2
        = label :amount, 10, "$10"
        
    .row
      .span1
        = radio_button_tag "amount", "20" 
      .span2
        = label :amount, 20, "$20"
    
    .row
      .span1
        = radio_button_tag "amount" ,"other"
      .span2
        = label :amount, "other", "Other"
      .span4
        = text_field :donation, :amount, :cols => "5", :disabled => :disabled
    
    .row
      .span3
        = button_tag "Donate"
  
  
= render 'youtube/upload', :videos => @project.videos, :width => 400

- if admin_signed_in?
  = link_to 'Edit', edit_project_path(@project) 

= link_to 'Back', projects_path 
- if admin_signed_in?
  = button_to 'Delete', project_path(@project), :method => :delete

:javascript
  $(document).ready(function(){
      $('#amount_10').click(function(){
        $('#donation_amount').attr("disabled","disabled");
      });

      $('#amount_20').click(function(){
        $('#donation_amount').attr("disabled","disabled");
      });

      $('#amount_other').click(function(){
        $('#donation_amount').removeAttr("disabled");
      });
  });
